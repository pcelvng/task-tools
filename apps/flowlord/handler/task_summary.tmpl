            <div class="collapsible-section">
                <div class="collapsible-header" onclick="toggleCollapsible('taskTypeSummary')">
                    <h3>Task Topic Summary</h3>
                    <span class="collapsible-toggle" id="taskTypeSummary-toggle">â–¼</span>
                </div>
                <div class="collapsible-content" id="taskTypeSummary-content">
                    <div class="topic-summary">
                        {{range $key, $stats := .Summary}}
                        <div class="topic-card">
                            <div class="topic-header">
                                <h4 class="topic-name">{{$key}}</h4>
                                <span class="topic-total">1 job</span>
                            </div>
                            <div class="jobs-breakdown">
                                <div class="job-card">
                                    <div class="job-header">
                                        <span class="job-name">{{$key}}</span>
                                        <span class="job-total">{{add $stats.CompletedCount $stats.ErrorCount}} tasks</span>
                                    </div>
                                    <div class="job-metrics">
                                        <div class="metric-row">
                                            <span class="metric-label">Complete:</span>
                                            <span class="metric-value complete">{{$stats.CompletedCount}}</span>
                                        </div>
                                        <div class="metric-row">
                                            <span class="metric-label">Error:</span>
                                            <span class="metric-value error">{{$stats.ErrorCount}}</span>
                                        </div>
                                        <div class="metric-row">
                                            <span class="metric-label">Alert:</span>
                                            <span class="metric-value alert">{{getAlertCount $key $key}}</span>
                                        </div>
                                        <div class="metric-row">
                                            <span class="metric-label">Warning:</span>
                                            <span class="metric-value warn">{{getWarnCount $key $key}}</span>
                                        </div>
                                        {{if gt $stats.CompletedCount 0}}
                                        <div class="metric-row">
                                            <span class="metric-label">Exec Times:</span>
                                            <span class="metric-value">min: {{formatDuration $stats.ExecTimes.Min}} max: {{formatDuration $stats.ExecTimes.Max}} avg: {{formatDuration $stats.ExecTimes.Average}}</span>
                                        </div>
                                        {{end}}
                                    </div>
                                </div>
                            </div>
                        </div>
                        {{end}}
                    </div>
                </div>
            </div>

